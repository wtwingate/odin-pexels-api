<h1>Hello, World!</h1>

<%= form_with url: :root, method: :get do |form| %>
  <%= form.label :query, "Search for photos:" %>
  <%= form.search_field :query %>
  <%= form.submit "Search" %>
<% end %>

<% if @query %>
  <h2>Search Results for "<%= @query %>"</h2>
  <% if @photo_urls.any? %>
    <% @photo_urls.each do |url| %>
      <%= image_tag(url) %>
    <% end %>
  <% else %>
    <p>No results found...</p>
  <% end %>
<% end %>
